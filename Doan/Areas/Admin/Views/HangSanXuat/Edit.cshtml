@model Doan.Models.HangSanXuat

@{
	ViewData["Title"] = "Sửa hãng sản xuất";
}
<div class="card">
	<h5 class="card-header">@ViewData["Title"]</h5>
	<div class="card-body">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />

			<div class="mb-3">
				<label asp-for="TenHangSanXuat" class="control-label"></label>
				<input asp-for="TenHangSanXuat" class="form-control" />
				<span asp-validation-for="TenHangSanXuat" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="TenHangSanXuatKhongDau" class="control-label"></label>
				<input asp-for="TenHangSanXuatKhongDau" class="form-control" placeholder="Bỏ trống sẽ tự động xử lý tên không dấu" />
				<span asp-validation-for="TenHangSanXuatKhongDau" class="text-danger"></span>
			</div>

			<div class="mb-3">
				@if (!string.IsNullOrEmpty(Model.HinhAnh))
				{
					<span class="d-block mb-2"><img src="~/uploads/@Model.HinhAnh" width="80" class="img-thumbnail" /></span>
					<span class="d-block mb-2 mt-2 small text-danger">Bỏ trống nếu không muốn cập nhật ảnh mới!</span>
				}
				<label asp-for="DuLieuHinhAnh" class="control-label"></label>
				<input asp-for="DuLieuHinhAnh" accept="image/jpeg,image/gif,image/png" class="form-control" />
				<span asp-validation-for="DuLieuHinhAnh" class="text-danger"></span>
			</div>

			@* <div class="mb-3">
				<label asp-for="HinhAnh" class="control-label"></label>
				<input asp-for="HinhAnh" class="form-control" />
				<span asp-validation-for="HinhAnh" class="text-danger"></span>
			</div> *@

			<div class="mb-0">
				<button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Cập nhật</button> hoặc <a asp-action="Index">Quay về danh sách</a>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
